@import url(https://fonts.googleapis.com/css?family=Bad+Script);
*{
    text-decoration: none !important;
}

body {
    padding-top: 190px;
    padding-bottom: 20px;
    background: linear-gradient(#D7D9DD,#fff) 0px 0px no-repeat; 
    background-size: 100% 500px;
}
.principal{
    box-shadow: 0 -25px 15px #dbdde0;
    background: #fff;
    padding-bottom: 20px;

}
.entrance{
    padding-top: 15px;
}
.menuContainer{
    background: #313C65;
    background: linear-gradient(#2D448E,#313C65); 
    text-align: center;
    border-bottom: solid 1px #c0c8d4;
    box-shadow: 0 0px 20px #506076;
    margin-top: 40px;
    z-index: 899;
}
.mainMenu li a{
    color: #fff;
    font-size: 16px;
    text-align: center;
}
.mainMenu li a:hover , 
.navbar-brand:hover , 
.menuTop a:hover
{
    background: none;
    color: #4BEFD3;
}

.mainMenu .dropdown-menu , .mainMenu .dropdown-menu a{
    text-align: left;
}
.mainMenu .dropdown{
    margin-top: -20px;
}
.mainMenu .dropdown label{
    padding-bottom: 5px;
    color: #4BEFD3;
    font-weight: normal;
}

footer{
    margin-top: 20px;
    padding-top: 15px;
}
.menuContainer  .navbar-toggle{
    border-color: #97A4CE;

}
.sr-only , .icon-bar{
    background: #97A4CE;
}
.menuContainer .navbar-brand{
    color: #fff;
    display: none;
}

.user{
    background: #222E59;
    z-index: 900;
    padding: 0px;
    padding: 20px 0 20px 0;
    color: #fff;
}

.navbar-fixed-top{
    line-height: 0px;
}
.menuContainer .nav .open > a,
.menuContainer .nav .open > a:hover,
.menuContainer .nav .open > a:focus,
.menuContainer .dropdown-menu,
.menuContainer button{
    background: #222E59;
    border: none;
    -webkit-border-top-left-radius: 5px;
    -webkit-border-top-right-radius: 5px;
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-topright: 5px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}
.nav > li > a:focus{
    background: none;
}
.menuContainer .dropdown-menu{
    padding:15px 0 15px 0;

}
.menuTop{
    text-align: center;

}
.menuTop a{
    text-decoration: none;
    color: #fff;
}
.menuTop .pull-left a{
    margin-right: 10px; 
}
.menuTop .pull-right a{
    margin-left: 10px; 
}
.mainMenu .active{
    color: #4BEFD3;   
}
.mainMenu .dropdown .dropdown-menu li{
    padding: 10px;
}

.btnMain{
    background:#04c1ce !important;
    background: linear-gradient(#4BEFD3,#04c1ce) !important; 
    color: #fff;
    text-shadow: 0px 0px 2px #17386c;
    font-style: italic;
    border: solid 1px #04c1ce !important;
}

.btnMain:hover{
    background:#4BEFD3 !important;
    background: linear-gradient(#04c1ce, #4BEFD3) !important; 
    color: #fff;

}
.btnMainOrange{
    background:#ff9900 !important;
    background: linear-gradient(#ff9900,#ff6600) !important; 
    color: #fff;
    text-shadow: 0px 0px 2px #965200;
    font-style: italic;
    border: solid 1px #cc6600 !important;
    margin-bottom: 10px;
}

.btnMainOrange:hover{
    background:#4BEFD3 !important;
    background: linear-gradient(#ff6600, #ff9900) !important; 
    color: #fff;
    border-color: #ffb900 !important;
}
.table{
    background: #fff;
}
.aa{
    background: red;
}

.menuContainer h3{
    color: #4BEFD3;
    font-family: 'Bad Script', cursive;
    font-size: 20px;
}
.principal h3{
    color: #2D448E !important;

}
.menuTop .navbar-brand{
    height: 0px;
    padding: 1px;
    line-height: 0px;
    font-size: 15px;
    margin: 0px;
    display: block;
    font-weight: bold;
    float: none;
}
.pagination{
    margin: 0;
}
.dropdown-header{
    color: #4BEFD3;
}

.thumbnailLogo{
    margin-top: -30px;
}

.rate{
    padding: 15px 10px 0px 10px;
    line-height: 0px;
    color: #313C65
}
.rate .glyphicon{
    padding: 0px;
    margin: 0px;
    color: #aaa;    
    font-size: 15px;
}
.rate .ative{
    color: #ff9900;

}
.rate .glyphicon:hover{
    color: #ffff33;

}
.social img{
    width: 30px;
    padding-top: 5px;
}
.thumbnailRight:nth-child(1){
    margin-top: -20px;

}
.thumbnailRight iframe{
    width: 100%;
    height: 204px;
}
.services{
    margin-top: 20px;
}

.services .nav-pills{
    font-size: 16px !important;
    font-style: italic;
}
.services .nav-pills .active a{
    background: linear-gradient(#e0e0e0,#f5f5f5) 0px 0px !important;
    border-radius: 0px;
    border-top-left-radius: 5px;
    border-top-right-radius:  5px;
    color: #2D448E !important;
    text-shadow: 1px 1px 1px #fff;
}
.services .panel-body{
    background: linear-gradient(#f5f5f5 , #fff) 0px 0px !important;
    border-radius: 0px;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius:  5px;
}
.services table tr td{
    vertical-align: middle;   
}
.services table tr td:nth-child(2){
    width: 150px;
    text-align: center;
}
.carousel{
 margin-bottom: 20px;   
}
.clients div{
    margin-bottom: 20px;
}
.clients div img{
width: 100%;
}
input:focus {
	background: #fcffca !important;
	border-color: #e5eb88 !important;
}

.requiredField {
	background: #ffdcdc !important;
	border-color: #bd6d4e;
	color: #000 !important;
}

.small-text {
	color: #a00;
	font-size: 10px;
}

.mandatory {
	color: #a00;
	font-size: 12px;
}

@media (max-width: 980px) {
    .thumbnailRight:nth-child(1){
        margin: 20px 0;
    }
    .thumbnailRight{
        float: left;
        width: 48%;
        margin: 20px 2% 0px 2%;
    }
  .entrance{
        margin-top: 40px;
    }
}
@media (max-width: 767px) {
    .entrance{
        margin-top: -90px;
    }
    .tableMain td, .tableMain th{
        display: block;
        border: none !important;
    }
    .tableMain thead{
        display: none;
    }
    .mainMenu .dropdown-menu , 
    .mainMenu .dropdown-menu a ,
    .mainMenu a ,
    .mainMenu li a{
        text-align: left;
    }

    .mainMenu li a br{
        display: none;
    } 
    .mainMenu li a span{
        margin-right: 10px;
    } 
    .menuContainer .navbar-brand{
        display: block;
    }
    .menuTop .navbar-brand{
        display: none;
    }
    .pagination{
        margin-top: 5px;
    }
    .img-thumbnail{
        margin-bottom: 10px;
    }
    .social{
        width: 100%;
        margin: 20px 0 20px 0;
        padding-top: 0px;
    }
    .social img{
        width: 37px;
        margin: 0 5px 0 0;
    }
    .thumbnailRight ,   .thumbnailRight:nth-child(1){
        width:96%;
        margin: 20px 2% 0px 2%;
    }
    .thumbnailRight iframe{
        height: 300px;
    }
    .mainMenu .dropdown{
        margin-top: 0px;
    }
}