<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui">

	<ui:composition template="../templates/comumInterno.xhtml">
		
		<ui:define name="pageCenter">
			
			<p:outputLabel value="#{msg.descricaoObrigatorio} " style="color:#FF0000;"/><br /><br />
				
			<p:panel id="panelFluxo" header="#{msg.grafico}" >
			
				<h:panelGrid columns="5" cellpadding="10" > 
	 				
	 				<h:panelGroup>
		 				<br/>
		 				<h:outputLabel value="Selecione o período desejado:" />
					</h:panelGroup>
					
					<h:panelGroup> 
		 				<p:outputLabel value="Data de Início:" ><h:graphicImage value="#{msg.img_arterisco}" style="border:none;" /></p:outputLabel><br />	
		 				<p:calendar locale="pt_BR" pattern="dd/MM/yyyy" value ="#{graficoMB.fluxoCaixa.dataInicial}" id="popupVencAte" />  	 
					</h:panelGroup>
	
					
			    	 <h:panelGroup> 
		 				<p:outputLabel value="Data Fim:" ><h:graphicImage value="#{msg.img_arterisco}" style="border:none;" /></p:outputLabel><br />	
		 				<p:calendar locale="pt_BR" pattern="dd/MM/yyyy" value ="#{graficoMB.fluxoCaixa.dataFinal}" id="popupPagtoDe" />
					</h:panelGroup>

					<p:commandButton value="#{msg.btnConsulta}"  action="#{graficoMB.geraGrafico}" update="frm"  />
					
			    </h:panelGrid>
				
				
				<p:tabView id="acord" dynamic="true" cache="true" widgetVar="acordVar" rendered="#{graficoMB.habilitaGrafico}"> 
					 
					 <p:tab title="Funcionário Valores" >
            			<p:pieChart value="#{graficoMB.graficoPizzaFuncValores}"  legendPosition="w" showDataLabels="true" style="width:100%;height:450px"  /> 		
					 </p:tab>
					 
					 <p:tab title="Funcionário Atendimento" >
            			<p:pieChart value="#{graficoMB.graficoPizzaFuncAtendi}" legendPosition="w" showDataLabels="true" style="width:100%;height:450px"/> 
					 </p:tab>
					 
					 <p:tab title="Cliente Valores" >
            			<p:pieChart value="#{graficoMB.graficoPizzaCliValores}" legendPosition="w" showDataLabels="true" style="width:100%;height:450px"/> 
					 </p:tab>
					 
					 <p:tab title="Cliente Atendimento" >
            			<p:pieChart value="#{graficoMB.graficoPizzaCliAtendi}" legendPosition="w" showDataLabels="true" style="width:100%;height:450px"/> 
					 </p:tab>
					 
					 
				
				</p:tabView>
				
				
				
			</p:panel>

		</ui:define>
		
	</ui:composition>
</html>
