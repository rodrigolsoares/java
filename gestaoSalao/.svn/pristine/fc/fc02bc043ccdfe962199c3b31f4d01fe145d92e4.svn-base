<f:view xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:pm="http://primefaces.org/mobile">

	<pm:page title="Portal do Salão Mobile">
		<pm:view id="main">
			<pm:header title="Portal do Salão">

				<f:facet name="left">
					<p:button value="Sair" icon="back" />
				</f:facet>

			</pm:header>


			<pm:content>
				<h:outputText value="Menu" />
				<p:separator />


				<ui:repeat value="#{menuMobileMB.listaMenu}" var="menuPai">

					<p:panel header="#{menuPai.nome}" collapsed="true">
						
						<p:dataList value="#{menuPai.menuFilho}" var="menu">
							<h:outputLink value="#{menu.nome}">
								<h:outputLabel value="#{menu.nome}" />
							</h:outputLink>
						</p:dataList>
				
					</p:panel>

				</ui:repeat>



			</pm:content>


		</pm:view>
	</pm:page>

</f:view>

